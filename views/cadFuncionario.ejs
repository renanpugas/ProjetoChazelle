<%- include("inc/head") -%>
<%- include("inc/header") -%>

<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1">Cadastrar Funcionário</h2>
                    </div>
                </div>
            </div>
            <div class="card m-t-20">
                        <div class="card-header">
                            <strong>Preencha o formulário para cadastrar um funcionário para a empresa</strong>
                        </div>
                        <div class="card-body card-block" style="padding-bottom: 0.2rem">
                            <form action="/funcionario" method="post" class="form-horizontal">
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="text-input" class=" form-control-label">Nome</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="text" id="nome" name="nome" placeholder="Digite o nome do funcionário" class="form-control" required>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="email-input" class=" form-control-label">Email</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="email" id="email" name="email" placeholder="Digite o email do funcionário" class="form-control" required>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="password-input" class=" form-control-label">CPF</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="text" id="cpf" name="cpf" placeholder="Digite o CPF do funcionário" class="form-control" required>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="password-input" class=" form-control-label">Senha</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="password" id="senha" name="senha" placeholder="Digite a senha" class="form-control" required>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="password-input" class=" form-control-label">Confirme a Senha</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="password" id="confirm-senha" name="confirm-senha" placeholder="Confirme a senha" class="form-control" required>
                                        <input type="checkbox" id="administrator" name="administrator" value="false" class="form-check-input" style="visibility: hidden" checked>
                                        <input type="text" id="cnpj" name="cnpj" class="form-control" value="<%= user.CNPJ_empresa %>" style="visibility: hidden">
                                    </div>
                                </div>
                                <div class="row form-group">
                                        <div class="card-footer">     
                                            <button type="submit" class="btn btn-primary btn-sm">
                                                <i class="fa fa-chevron-right"></i> Enviar
                                            </button>
                                            <button type="reset" class="btn btn-danger btn-sm">
                                                <i class="fa fa-ban"></i> Limpar Campos
                                            </button>
                                        </div>
                                </div>
                            </form>
                        </div>
                        
                    </div>
            </div>

<script src="js/cadFuncionario.js"></script>
<%- include("inc/footer") -%>